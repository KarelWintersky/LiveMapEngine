{
  "title"         : "Map of Confederation",
  "type"          : "vector",
  "display": {
    "zoom": 0,
    "zoom_min": -3,
    "zoom_max": 2,
    "background_color"  : "transparent",
    "maxbounds": [[-0.5, -1], [1.5, 2]],
    "cursor": "pointer"
  },
  "display_defaults": {
    "empty": {
      "stroke": 0,
      "borderColor" : "#000000",
      "borderWidth" : 0,
      "borderOpacity": 0,
      "fill": 1,
      "fillColor": "#0000ff",
      "fillOpacity": 0.3
    },
    "present": {
      "stroke": 0,
      "borderColor" : "#000000",
      "borderWidth" : 0,
      "borderOpacity": 0,
      "fill": 1,
      "fillColor": "#00ff00",
      "fillOpacity": 0.4
    }
  },
  "image" : {
    "file"  : "confmap.svg",
    "width" : 2104,
    "height": 1488,
    "ox"    : 0,
    "oy"    : 0
  },
  "layout": {
    "file"   : "confmap_common.svg",
    "layers" : [ "Stars&Channels", "CLOutline" ]
  },
  "layers": {
    "Stars&Channels": {
      "hint" : "Звездные системы",
      "zoom" : 0,
      "zoom_min" : -100,
      "zoom_max" : 100,
      "empty": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 0,
        "borderOpacity": 0,
        "fill": 1,
        "fillColor": "#0000ff",
        "fillOpacity": 0.3
      },
      "present": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 0,
        "borderOpacity": 0,
        "fill": 1,
        "fillColor": "#00ff00",
        "fillOpacity": 0.3
      }
    },
    "CLOutline": {
      "hint" : "Гиперканалы",
      "zoom" : 0,
      "zoom_min" : -100,
      "zoom_max" : 100,
      "empty": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 0,
        "borderOpacity": 0,
        "fill": 1,
        "fillColor": "#5500ff",
        "fillOpacity": 0.3
      },
      "present": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 0,
        "borderOpacity": 0,
        "fill": 1,
        "fillColor": "#ffff00",
        "fillOpacity": 0.4
      }
    }
  },
  "edit_templates": {
    "templates": [
      {
        "title"     : "Подробный шаблон",
        "description" : "Шаблон с филдсетами",
        "url"         : "tinymce.fieldsets.html"
      },
      {
        "title"       : "Краткий шаблон",
        "description" : "Шаблон plain/text",
        "url"         : "tinymce.plaintext.html"
      }
    ],
    "content_css" : "template-styles.css",
    "template_popup_width"  : 800,
    "template_popup_height" : 400
  }
}
