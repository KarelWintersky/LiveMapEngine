{
  "title"         : "Deadlands",
  "type"          : "bitmap",
  "display": {
    "zoom": -3,
    "zoom_min": -3,
    "zoom_max": 2,
    "background_color"  : "#dcbd6d",
    "maxbounds": [[-0.5, -1], [1.5, 2]],
    "custom_css" : "deadland.css",
    "cursor": "pointer",
    "focus_highlight_color": "#e900ff",
    "focus_timeout": 1500,
    "focus_animate_duration": 0.7
  },
  "image" : {
    "file"  : "deadland.jpg",
    "width" : 6600,
    "height": 5183,
    "ox"    : 0,
    "oy"    : 0
  },
  "display_defaults": {
    "empty": {
      "stroke": 0,
      "borderColor" : "#000000",
      "borderWidth" : 0,
      "borderOpacity": 0,
      "fill": 1,
      "fillColor": "#2277ff",
      "fillOpacity": 0.3
    },
    "present": {
      "stroke": 0,
      "borderColor" : "#000000",
      "borderWidth" : 0,
      "borderOpacity": 0,
      "fill": 1,
      "fillColor": "#2277ff",
      "fillOpacity": 0.5
    }
  },
  "layout": {
    "file"        : "deadland.svg",
    "layers" : [ "Towns", "Battlegrounds", "Domains" ]
  },
  "layers": {
    "Towns": {
      "hint" : "Города и посёлки",
      "zoom" : 0,
      "zoom_min" : -1,
      "zoom_max" : 3,
      "empty": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 1,
        "borderOpacity": 0.3,
        "fill": 1,
        "fillColor": "#b1a0ff",
        "fillOpacity": 0.5
      },
      "present": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 1,
        "borderOpacity": 0.3,
        "fill": 1,
        "fillColor": "#1cff82",
        "fillOpacity": 0.5
      }
    },
    "Battlegrounds": {
      "hint" : "Поля битв",
      "zoom" : 0,
      "zoom_min" : -1,
      "zoom_max" : 3,
      "empty": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 1,
        "fill": 1,
        "borderOpacity": 0.3,
        "fillColor": "#ffbc21",
        "fillOpacity": 0.5
      },
      "present": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 1,
        "borderOpacity": 0.3,
        "fill": 1,
        "fillColor": "#ff0000",
        "fillOpacity": 0.5
      }
    },
    "Domains": {
      "hint" : "Территории",
      "zoom" : -3,
      "zoom_min" : -2,
      "zoom_max" : -3,
      "empty": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 1,
        "fill": 1,
        "borderOpacity": 0.3,
        "fillColor": "#bafcff",
        "fillOpacity": 0.4
      },
      "present": {
        "stroke": 0,
        "borderColor" : "#000000",
        "borderWidth" : 1,
        "borderOpacity": 0.3,
        "fill": 1,
        "fillColor": "#9bb7ff",
        "fillOpacity": 0.6
      }
    }
  }
}